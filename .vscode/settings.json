{
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "black-formatter.args": [
        "--line-length=120"
    ],
    "isort.args": [
        "--profile=black",
        "--line-length=120"
    ],
    "python.testing.pytestArgs": [
        "-vv",
        "-s",
        "test"
    ],
    "python.analysis.extraPaths": [
        "src",
        "test",
        "example/src",
    ],
    "python.autoComplete.extraPaths": [
        "src",
        "example/src",
    ],
    "python.testing.pytestPath": "src",
}