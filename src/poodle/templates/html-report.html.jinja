{% macro trial_details(trial, source_file=None) %}
<div class="trial {% if trial.result.found %} found {% else %} not_found {% endif %}">
    {% if source_file %}
    <p><span class="lablel">Source File:</span> {{ source_file }}</p>
    {% endif %}
    <p><span class="lablel">Mutator Name:</span> {{ trial.mutant.mutator_name }}</p>
    <p><span class="lablel">Unified Diff:</span></p>
    <pre>{{ trial.mutant.unified_diff }}</pre>
    <p><span class="lablel">Reason:</span> {{ trial.result.reason_code }}</p>
    {% if trial.result.reason_desc %}
    <p><span class="lablel">Description:</span></p>
    <pre>{{ trial.result.reason_desc }}</pre>
    {% endif %}
</div>
{% endmacro %}

<!DOCTYPE html>
<html>

<head>
    {% block head %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{{ title }}</title>
    <link rel="stylesheet" type="text/css" href="style.css" />
    <link rel="icon" href="poodle.ico" type="image/x-icon" />
    {% endblock %}
</head>

<body>
    <header>
        {% block header %}
        <div class="title">
            <h1>{{ title }}</h1>
        </div>
        {% if project.name %}
        <div class="subtitle">
            <p><span class="lablel">Project:</span> {{ project.name }}
                {% if project.version %} version {{ project.version }} {% endif %}</p>
        </div>
        {% endif %}
        {% endblock %}
    </header>
    <main>
        {% block main %}
        {% endblock %}
    </main>
    <footer>
        {% block footer %}
        <div>
            <p>Generated by <a href="http://poodle.rtfd.io">Poodle</a> version {{ poodle_version }} at {{ timestamp }}</p>
        </div>
        {% endblock %}
    </footer>
    {% block scripts %}
    <script type="text/javascript" src="html-report.js"></script>
    {% endblock %}
</body>

</html>